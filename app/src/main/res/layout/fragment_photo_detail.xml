<?xml version="1.0" encoding="utf-8"?>


<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PhotoDetail.PhotoDetailFragment">
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:orientation="vertical">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textDetailView"
                android:textAlignment="viewStart" android:text="@string/photo_details" android:textSize="24sp"
                android:textColor="@android:color/black" android:layout_margin="8dp"/>
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" tools:src="@tools:sample/backgrounds/scenic"
                android:id="@+id/imageDetailView"/>
    </LinearLayout>
</ScrollView>